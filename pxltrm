#!/usr/bin/env bash
#
# A pixel art editor for the terminal.


get_term_size() {
    printf '\e[18t'
    IFS=';t' read -d t -t 0.05 -sr _ _ columns
}


status_line() {
    local status block_char

    # Generate block width based on terminal width.
    printf -v block_width "%$(("${1:-80}" / 9))s" ""

    for i in {0..8}; do
        ((i==$2)) && block_char="▃" || block_char=" "
        ((i>7)) && i="8;5;$i"
        status+="\\e[4${i}m\\e[37m${block_width// /${block_char}}\\e[0m"
    done

    printf '\e[s'
    printf '\e[999999B\e[9999999D'
    printf '%b' "$status"
    printf '\e[9999999D\e[1A'
    printf '%b' "${status//▃/ }"
    printf '\e[999999B\e[9999999D'
    printf '\e[u'
}


cursor() {
    : "${1: -1}"

    case "${1: -1}" in
        # Cursor Movement.
        A|k): '\e[1A' ;;
        B|j): '\e[1B' ;;
        C|l): '\e[1C' ;;
        D|h): '\e[1D' ;;

        # Color Selection.
        [0-8]) color="${1: -1}" ;;

        # Drawing Cells.
        d): "\\e[38;5;${color}m█\\e[1D" ;;
        e): "\\e[38;5;0m█\\e[1D" ;;

        # Other.
        *) return ;;
    esac

    printf '%b' "$_"
}


main() {
    [[ "$1" == "-v" ]] && { set -x; unset PATH; }

    clear='\e[2J\e[1;1H\e[0m'
    trap 'printf %b $clear' EXIT
    trap 'get_term_size' SIGWINCH

    get_term_size

    # Clear the screen.
    printf '%b' "$clear"

    while :; do
        status_line "$columns" "${color:-7}"
        read -rs -N 1 key
        cursor "$key"
    done
}

main "$@"
